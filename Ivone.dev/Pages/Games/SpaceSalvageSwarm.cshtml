@page "/games/space-salvage-swarm"
@model Ivone.dev.Pages.Games.SpaceSalvageSwarmModel
@{
    ViewData["Title"] = "Space Salvage Swarm";
}

<section class="game-hero">
    <div>
        <p class="eyebrow">Roguelite RTS Prototype</p>
        <h1>Space Salvage Swarm</h1>
        <p>Command a modular flagship, guide escorts, loot salvage and survive three hostile sectors in this Phaser 3 prototype. Runs entirely in-browser with localStorage-based unlocks.</p>
        <ul class="game-highlights">
            <li>Procedural sectors with modifiers and lootable modules.</li>
            <li>Command ship hardpoints, escorts with aggression toggles, pause planning.</li>
            <li>Meta progression keeps track of total score and unlocked hulls.</li>
        </ul>
        <p class="hint">Controls: WASD / arrows to steer, right click to set a queued move while paused, left click toggles escort aggression, spacebar pauses, buttons in HUD restart or return to menu.</p>
    </div>
</section>

<div class="game-stage">
    <div id="space-salvage-swarm-root" class="game-canvas"></div>
</div>

<style>
    .game-hero {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
        margin-bottom: 1.5rem;
    }
    .game-highlights {
        padding-left: 1.25rem;
        margin: 0 0 1rem 0;
    }
    .game-stage {
        width: 100%;
        min-height: 70vh;
        border: 1px solid #1d3557;
        border-radius: 1rem;
        background: radial-gradient(circle at top, #112031, #05070b);
        padding: 0.5rem;
    }
    .game-canvas canvas {
        width: 100%;
        height: 100%;
    }
</style>

@section Scripts {
    <script src="~/js/games/space-salvage-swarm.bundle.js" defer></script>
}
