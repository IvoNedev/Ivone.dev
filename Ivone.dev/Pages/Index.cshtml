@page
@model IndexModel
@{
    ViewData["Title"] = "Page Directory";
}

<section class="landing-hero">
    <p class="eyebrow">Ivone.dev</p>
    <h1>All Pages</h1>
    <p class="lede">Open any tool, game, or widget from one place.</p>
    <p class="count">@Model.PageLinks.Count page(s) available</p>
</section>

<section class="links-card">
    @if (Model.PageLinks.Count == 0)
    {
        <p class="empty-state">No pages were discovered.</p>
    }
    else
    {
        <div class="page-grid">
            @foreach (var link in Model.PageLinks)
            {
                <a class="page-btn" href="@link.Url">@link.Title</a>
            }
        </div>
    }
</section>

@section Styles {
    <style>
        .landing-hero {
            padding: 1.5rem;
            background: rgba(15, 23, 42, 0.65);
            border-radius: 1.5rem;
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.3);
            margin-bottom: 1rem;
            text-align: center;
        }

        .eyebrow {
            text-transform: uppercase;
            letter-spacing: 0.35em;
            font-size: 0.7rem;
            color: rgba(248, 250, 252, 0.55);
            margin: 0 0 0.5rem;
        }

        .landing-hero h1 {
            margin: 0;
            font-size: clamp(1.8rem, 5vw, 2.4rem);
        }

        .lede {
            margin: 0.6rem 0 0;
            color: rgba(248, 250, 252, 0.75);
            line-height: 1.4;
        }

        .count {
            margin: 0.65rem 0 0;
            color: rgba(248, 250, 252, 0.8);
            font-size: 0.9rem;
        }

        .links-card {
            background: rgba(15, 23, 42, 0.85);
            border-radius: 1.5rem;
            padding: 1.5rem;
            box-shadow: 0 20px 45px rgba(0, 0, 0, 0.35);
        }

        .page-grid {
            display: grid;
            grid-template-columns: repeat(4, minmax(0, 1fr));
            gap: 0.75rem;
        }

        .page-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 52px;
            border-radius: 999px;
            padding: 0.9rem 1.2rem;
            font-weight: 600;
            font-size: 1rem;
            text-align: center;
            text-decoration: none;
            color: #fff;
            background: linear-gradient(100deg, #8b5cf6, #ec4899);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .page-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(236, 72, 153, 0.4);
        }

        .empty-state {
            margin: 0;
            text-align: center;
            color: rgba(248, 250, 252, 0.75);
        }

        @@media (max-width: 1100px) {
            .page-grid {
                grid-template-columns: repeat(3, minmax(0, 1fr));
            }
        }

        @@media (max-width: 760px) {
            .page-grid {
                grid-template-columns: repeat(2, minmax(0, 1fr));
            }
        }

        @@media (max-width: 520px) {
            .page-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}
