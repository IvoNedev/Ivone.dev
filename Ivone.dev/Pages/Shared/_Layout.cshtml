<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(string.IsNullOrWhiteSpace(ViewData["Title"] as string) ? "Ivone.dev - Mobile Lab" : $"{ViewData["Title"]} - Ivone.dev")</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            color-scheme: light dark;
            --bg: linear-gradient(160deg, #0f172a, #1e1b4b 40%, #312e81);
            --surface: rgba(15, 23, 42, 0.75);
            --text: #f8fafc;
            --text-muted: rgba(248, 250, 252, 0.75);
            --accent: #7c3aed;
            --accent-soft: rgba(124, 58, 237, 0.15);
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Space Grotesk', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: var(--bg);
            color: var(--text);
            min-height: 100vh;
            display: flex;
            justify-content: center;
        }

        .app-shell {
            width: 100%;
            max-width: 100%;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            padding: 1.25rem;
            gap: 1rem;
        }

        .app-footer {
            display: none;
        }

        @@media (min-width: 640px) {
            body {
                padding: 1.5rem 0;
            }
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="app-shell">
        <main role="main" class="app-main" style="background: rgba(15,23,42,0.8); border-radius: 1.5rem; padding: 1.25rem 1.25rem 0; flex: 1;">
            @RenderBody()
        </main>

        <footer class="app-footer">
            &copy; @DateTime.UtcNow.Year
        </footer>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
