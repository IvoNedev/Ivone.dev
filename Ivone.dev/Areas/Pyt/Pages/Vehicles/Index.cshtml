@page
@model Ivone.dev.Areas.Pyt.Pages.Vehicles.IndexModel
@{
    ViewData["Title"] = "Vehicles";
}

<section class="panel" id="master-data-page" data-kind="vehicles" data-endpoint="/api/pyt/vehicles">
    <div class="panel-header">
        <h1>Vehicles</h1>
    </div>

    <form id="entity-form" class="trip-grid" autocomplete="off">
        <input type="hidden" id="entity-id" />
        <label>Plate Number<input id="plate-number" required maxlength="32" /></label>
        <label>Make/Model<input id="make-model" required maxlength="200" /></label>
        <label>Fuel Type<input id="fuel-type" required maxlength="64" /></label>
        <label>Avg Consumption<input type="number" step="0.01" id="avg-consumption" min="0" /></label>
        <label>Last Mileage<input type="number" id="last-mileage" min="0" /></label>
        <label class="checkbox-label"><input type="checkbox" id="is-active" checked /> Active</label>

        <div class="form-actions">
            <button type="submit" class="btn-primary" id="entity-save-btn">Save</button>
            <button type="button" class="btn-secondary" id="entity-reset-btn">Reset</button>
        </div>
        <div id="entity-message" class="status-message" aria-live="polite"></div>
    </form>

    <div class="table-wrap">
        <table id="entity-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Plate</th>
                    <th>Model</th>
                    <th>Fuel</th>
                    <th>Avg</th>
                    <th>Last Km</th>
                    <th>Last Trip</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</section>

@section Scripts {
    <script src="~/js/pyt/vehicles.js" asp-append-version="true"></script>
}
